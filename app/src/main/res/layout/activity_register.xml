<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btnback"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/R_back"
        />


    <ImageView
        android:id="@+id/img_1"
        android:layout_width="203dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src='@drawable/logomerah'
        />
    <TextView
        android:layout_width="233dp"
        android:layout_height="33dp"
        android:text="Create Your Account"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/txt_r_create"
        android:gravity="center"/>

    <TextView
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:text="Email"
        android:layout_marginTop="198dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:text="Full Name"
        android:layout_marginTop="273dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:text="Password"
        android:layout_marginTop="349dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="129dp"
        android:layout_height="21dp"
        android:text="Confirm Password"
        android:layout_marginTop="423dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/img_1"
        android:padding="20dp"
        android:id="@+id/ly_register"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Email"
            android:background="@drawable/custom5"
            android:paddingLeft="35dp"
            android:id="@+id/r_fullname"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="Enter Your Full Name"
            android:background="@drawable/custom5"
            android:paddingLeft="35dp"
            android:id="@+id/r_email"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="Enter Your Password"
            android:background="@drawable/custom5"
            android:paddingLeft="35dp"
            android:id="@+id/r_password"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:hint="Confirm Your Password"
            android:background="@drawable/custom5"
            android:paddingLeft="35dp"
            android:id="@+id/r_confirm"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:src="@drawable/surat"
            android:layout_marginTop="-257dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:src="@drawable/ktp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="17dp"
            android:src="@drawable/gembok"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="17dp"
            android:src="@drawable/gembok"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/eye"
        android:layout_toRightOf="@id/r_password"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="385dp"
        android:id="@+id/r_mata1"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/eye"
        android:layout_toRightOf="@id/r_confirm"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="459dp"
        android:id="@+id/r_mata2"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/br"
        android:layout_below="@id/ly_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-200dp"
        android:id="@+id/r_btn_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/r_btn_1"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textSize="12sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Login"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/RL"/>
    </LinearLayout>

</RelativeLayout>