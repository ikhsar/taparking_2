<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/L_back"
        />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="202dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/logomerah"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/txt_l_welcome"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lest go, find a parking place easily with us"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="45dp"
        android:textColor="@color/abumuda"
        android:textSize="12sp"
        android:textStyle="italic"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/img_1"
        android:padding="30dp"
        android:id="@+id/ly_register">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter Your Email"
            android:background="@drawable/custom5"
            android:paddingLeft="40dp"
            android:textSize="14sp"
            android:id="@+id/l_email"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="12dp"
            android:src="@drawable/surat"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="10dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:hint="Enter Your Password"
            android:background="@drawable/custom5"
            android:paddingLeft="40dp"
            android:textSize="14sp"
            android:id="@+id/l_password"
            />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="17dp"
            android:src="@drawable/gembok"
            android:layout_marginTop="-33dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/l_gembok"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/eye"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="-20dp"
            android:id="@+id/l_mata"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentStart="true"
            android:id="@+id/l_checkbox"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:text="Forgot Password"
            android:layout_marginTop="-35dp"
            android:layout_marginLeft="230dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:id="@+id/txt_l_forgot"/>





    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signin"
        android:layout_below="@id/ly_register"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lshape"
        android:layout_marginTop="-40dp"
        android:id="@+id/l_btn_1"
        />
    <ImageView
        android:layout_width="411dp"
        android:layout_height="20dp"
        android:src="@drawable/youcan"
        android:layout_below="@id/l_btn_1"
        android:layout_marginTop="40dp"
        android:id="@+id/l_youcan"/>
    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/google"
        android:layout_below="@id/l_youcan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/l_google"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/l_google"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="12sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up here"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:id="@+id/L_regis"
            />


    </LinearLayout>






</RelativeLayout>